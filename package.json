{
  "name": "deribit-rxjs",
  "version": "2.1.1",
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "build": "babel -d lib src --minified --ignore '**/*.test.js'",
    "prepare": "yarn build",
    "lint": "eslint src",
    "test": "jest src --forceExit --silent -i -b",
    "tdd": "DEBUG=deribit-rxjs:*,-deribit-rxjs:ws jest src --watch -i",
    "dev": "DEBUG=deribit-rxjs:dev nodemon --exec babel-node src/dev.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.0",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.5.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "nodemon": "^2.0.2",
    "prettier": "^2.1.2"
  },
  "dependencies": {
    "debug": "4.3.1",
    "lodash": "^4.17.20",
    "rxjs": "^7.0.0",
    "ws": "^7.4.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test"
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "jest/globals": true,
      "es2020": true,
      "node": true
    },
    "extends": [
      "prettier",
      "plugin:jest/recommended",
      "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "allowImportExportEverywhere": false,
      "codeFrame": false,
      "impliedStrict": true
    },
    "plugins": [
      "prettier",
      "jest"
    ],
    "rules": {
      "no-unused-vars": "error",
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error",
      "prettier/prettier": [
        "error",
        {
          "arrowParens": "avoid",
          "semi": false,
          "singleQuote": true,
          "printWidth": 90,
          "tabWidth": 2
        }
      ]
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-optional-chaining",
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ]
  },
  "jest": {
    "roots": [
      "src"
    ],
    "testEnvironment": "node"
  },
  "description": "Deribit.com RxJS bindings",
  "repository": "git@github.com:santacruz123/deribit-rxjs.git",
  "author": "Andrey Vorobyov <vorandrew@gmail.com>"
}
